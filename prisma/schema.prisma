generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id     String @id @default(uuid())
  nome   String
  senha  Int
  imgUrl String
  nivel  Int
}

model Categoria {
  id       String    @id @default(uuid())
  nome     String
  produtos Produto[]
}

model Produto {
  id        String      @id @default(uuid())
  nome      String
  valor     Decimal     @db.Decimal(10, 2)
  categoria Categoria[]
  venda     Vendas[]
}

model Vendas {
  id      String    @id @default(uuid())
  data    DateTime
  valor   Decimal   @db.Decimal(15, 2)
  produto Produto[]
}
